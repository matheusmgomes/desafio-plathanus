<%= render 'properties/menu' %>

<div class="container text-center">
  <h1 class="display-4">New Property</h1>

  <%= form_with model: @property do |form| %>
    <div class="py-3">
      <%= form.text_field :name, required: true, class:"form-control form-control-lg", placeholder: "Name" %>
    </div>

    <div class="py-3">
      <label for="exampleFormControlFile1">Add Images</label>
      <%= form.file_field :images, required: true, multiple: true, class:"form-control-file" %>
    </div>

    <div class="py-3">
      <%= form.submit %>
    </div>
  <% end %>
</div>